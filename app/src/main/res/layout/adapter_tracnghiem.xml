<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imgHinhDaiDien"
        android:layout_width="5dp"
        android:layout_height="224dp" />

    <TableLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow>

            <TextView
                android:layout_width="42dp"
                android:layout_height="wrap_content"
                android:text="Câu:" />
            <TextView
                android:text="Câu hỏi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtCauhoi" />
        </TableRow>

        <TextView
            android:text="ID"
            android:textColor="#3905ab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtId" />



        <TableRow>
            <TextView
                android:text="A:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:text="A"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtA" />
        </TableRow>

        <TableRow>
            <TextView
                android:text="B:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:text="B"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtB" />
        </TableRow>

        <TableRow>
            <TextView
                android:text="C:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:text="C"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtC" />
        </TableRow>

        <TableRow>
            <TextView
                android:text="D:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:text="D"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtD" />
        </TableRow>

        <TableRow>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Đáp án:" />
            <TextView
                android:id="@+id/txtDapan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Đáp án" />
        </TableRow>

        <TableRow>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Số đề:" />
            <TextView
                android:id="@+id/txtSode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Số đề" />
        </TableRow>

        <TableRow>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Môn học:" />
            <TextView
                android:id="@+id/txtMonhoc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Môn học" />
        </TableRow>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btnHuy"
                android:layout_width="120dp"
                android:layout_height="36dp"
                android:layout_marginLeft="50dp"
                android:text="Sửa" />

            <Button
                android:id="@+id/btnXoa"
                android:layout_width="120dp"
                android:layout_height="36dp"
                android:layout_marginLeft="15dp"
                android:text="Xóa" />

        </LinearLayout>
    </TableLayout>
</LinearLayout>